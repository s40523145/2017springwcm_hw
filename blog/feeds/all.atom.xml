from browser import document
from browser import html
import random

標準答案 = random.randint(1, 100)
你猜的數字 = int(input("請輸入您所猜的整數:"))
猜測次數 = 1
while 標準答案 != 你猜的數字:
    if 標準答案 &lt; 你猜的數字:
        print("太大了，再猜一次 :)加油")
